{% extends "base.jinja2" %}

{% block content %}

<h1>Stock Portfolio</h1>
<p>A list of your current stocks</p>

{% for stock in stocks %}
<table id="portfolio-table">
  <tr>
    <th>Stock Ticker Symbol</td>
    <th>Price Per Share</td>
  </tr>
  <tr>
    <td>{{stock.symbol}}</td>
    <td>91.27</td>
  </tr>

</table>
{% endfor %}
{% comment %} <ul>

    <li>
      <h3>{{stock.companyName}}</h3>
      <p>({{stock.exchange}}) {{stock.industry}}</p>
      <p><a href="{{request.route_url('detail', symbol=stock.symbol)}}">view more</a></p>
      <!-- href="/detail/<some_id>" -->
    </li>

  </ul> {% endcomment %}

{% endblock content %}
