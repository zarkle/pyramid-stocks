{% extends "base.jinja2" %}

{% block content %}

<p>A list of the stocks in your portfolio. Click on symbol for more details</p>

<table id="portfolio-table">
  <tr>
    <th>Stock Ticker Symbol</td>
    <th>Price Per Share<br>(Company Name)</td>
    <th>Industry</td>
    <th>Website</td>
  </tr>
  {% for stock in stocks %}
  <tr>
    <td><a href="{{request.route_url('detail', symbol=stock.symbol)}}">{{stock.symbol}}</a></td>
    <td>{{stock.companyName}}</td>
    <td>{{stock.industry}}</td>
    <td><a href="{{stock.website}}" target="_blank">{{stock.symbol}}</a></td>
  </tr>
  {% endfor %}

</table>

{% endblock content %}
